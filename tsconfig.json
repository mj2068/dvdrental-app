{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    // ******************************
    "allowJs": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],

  "vueCompilerOptions": {
    "plugins": ["@vue/language-plugin-pug"]
  }
}
